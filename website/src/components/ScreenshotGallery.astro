---
type Props = {
	items: { title: string; src360: string; src540: string; src720: string }[];
};

const { items } = Astro.props;
---

<div class="mt-6 overflow-x-auto pb-2">
	<div class="flex gap-4">
		{items.map((item) => (
			<figure class="w-[240px] shrink-0 sm:w-[260px]">
				<div class="overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-sm dark:border-slate-800 dark:bg-slate-900/40">
					<img
						alt={item.title}
						loading="lazy"
						class="h-auto w-full"
						src={item.src540}
						srcset={`${item.src360} 360w, ${item.src540} 540w, ${item.src720} 720w`}
						sizes="(min-width: 1024px) 260px, 240px"
						width="540"
						height="1179"
					/>
				</div>
				<figcaption class="mt-2 text-sm text-slate-700 dark:text-slate-300">{item.title}</figcaption>
			</figure>
		))}
	</div>
</div>
