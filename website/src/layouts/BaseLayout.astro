---
import '../styles/global.css';
import type { Lang } from '../i18n/config';
import { STRINGS } from '../i18n/strings';
import { stripLangPrefix } from '../i18n/urls';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE } from '../config/site';

type Props = {
	lang: Lang;
	title: string;
	description: string;
	pathname: string;
};

const { lang, title, description, pathname } = Astro.props;
const s = STRINGS[lang];
const siteName = s.siteName;

const site = Astro.site ?? new URL('https://pelvisana.github.io');
const canonical = new URL(pathname, site).toString();
const ogImage = new URL('/img/og.png', site).toString();

const rest = stripLangPrefix(pathname);
const alternates = (['en', 'es', 'ca'] as const).map((altLang) => ({
	lang: altLang,
	href: new URL(`/${altLang}${rest}`.replaceAll(/\/+/g, '/'), site).toString(),
}));

const ogLocaleByLang: Record<Lang, string> = { en: 'en_US', es: 'es_ES', ca: 'ca_ES' };
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
			<meta name="description" content={description} />
			<link rel="canonical" href={canonical} />
			<link rel="icon" type="image/png" href="/favicon.png" />
			<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
			<link rel="manifest" href="/site.webmanifest" />
			<meta name="color-scheme" content="light dark" />
			<link rel="alternate" type="text/plain" title="LLMs" href="/llms.txt" />
			<link rel="alternate" type="text/plain" title="LLMs (full)" href="/llms-full.txt" />
			<meta name="theme-color" content="#0f172a" media="(prefers-color-scheme: dark)" />
			<meta name="theme-color" content="#3e4df5" media="(prefers-color-scheme: light)" />

		<script is:inline>
			(() => {
				try {
					const stored = localStorage.getItem('pelvisana_theme');
					const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
					const isDark = stored ? stored === 'dark' : prefersDark;
					document.documentElement.classList.toggle('dark', isDark);
				} catch {}
			})();
		</script>

		<meta property="og:site_name" content={siteName} />
		<meta property="og:title" content={title} />
			<meta property="og:description" content={description} />
			<meta property="og:type" content="website" />
			<meta property="og:url" content={canonical} />
			<meta property="og:image" content={ogImage} />
			<meta property="og:image:width" content="1200" />
			<meta property="og:image:height" content="630" />
			<meta property="og:image:alt" content={s.seo.ogImageAlt} />
			<meta property="og:locale" content={ogLocaleByLang[lang]} />
			{alternates
				.filter((a) => a.lang !== lang)
				.map((a) => <meta property="og:locale:alternate" content={ogLocaleByLang[a.lang]} />)}
			<meta name="twitter:card" content="summary_large_image" />
			<meta name="twitter:title" content={title} />
			<meta name="twitter:description" content={description} />
			<meta name="twitter:image" content={ogImage} />
			<meta name="twitter:image:alt" content={s.seo.ogImageAlt} />

		{alternates.map((a) => <link rel="alternate" hreflang={a.lang} href={a.href} />)}
		<link rel="alternate" hreflang="x-default" href={new URL('/en/', site).toString()} />

			<script
				type="application/ld+json"
				is:inline
				set:html={JSON.stringify({
					'@context': 'https://schema.org',
					'@graph': [
						{
							'@type': 'Organization',
							'@id': new URL('/#organization', site).toString(),
							name: siteName,
							url: site.toString(),
							logo: {
								'@type': 'ImageObject',
								url: new URL('/img/logo-800w.webp', site).toString(),
							},
							contactPoint: [
								{
									'@type': 'ContactPoint',
									contactType: 'customer support',
									email: SITE.email,
								},
							],
							sameAs: [SITE.githubUrl, SITE.playStoreUrl].filter(Boolean),
						},
						{
							'@type': 'WebSite',
							'@id': new URL('/#website', site).toString(),
							name: siteName,
							url: site.toString(),
							inLanguage: lang,
							publisher: { '@id': new URL('/#organization', site).toString() },
						},
						{
							'@type': 'WebPage',
							'@id': new URL(`${pathname}#webpage`, site).toString(),
							url: canonical,
							name: title,
							description,
							inLanguage: lang,
							isPartOf: { '@id': new URL('/#website', site).toString() },
							about: { '@id': new URL('/#organization', site).toString() },
						},
					],
				})}
			/>
		</head>
	<body class="min-h-dvh bg-white text-slate-900 antialiased dark:bg-surface-dark dark:text-slate-100">
		<a
			class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:z-50 focus:rounded-md focus:bg-white focus:px-3 focus:py-2 focus:text-sm focus:ring-2 focus:ring-ink-600 dark:focus:bg-slate-900"
			href="#content"
		>
			Skip to content
		</a>
		<Header lang={lang} pathname={pathname} />
		<main id="content" class="mx-auto w-full max-w-6xl px-4 pb-16 pt-10 sm:px-6 lg:px-8">
			<slot />
		</main>
		<Footer lang={lang} />
	</body>
</html>
