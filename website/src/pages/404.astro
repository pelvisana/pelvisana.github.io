<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="robots" content="noindex" />
		<title>Pelvisana — Not Found</title>
		<link rel="icon" type="image/png" href="/favicon.png" />
	</head>
	<body style="font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial; padding: 2rem; line-height: 1.5;">
		<h1>Page not found</h1>
		<p>Try:</p>
		<ul>
			<li><a href="/en/">English</a></li>
			<li><a href="/es/">Español</a></li>
			<li><a href="/ca/">Català</a></li>
		</ul>
		<script>
			(() => {
				const supported = ['en', 'es', 'ca'];
				const fallback = 'en';
				const normalize = (l: string) => (l || '').toLowerCase().split(/[-_]/)[0];
				const stored = (() => {
					try {
						return localStorage.getItem('pelvisana_lang');
					} catch {
						return null;
					}
				})();
				const languages = [navigator.language].concat(navigator.languages || []).filter(Boolean);
				const picked =
					(stored && supported.includes(stored) ? stored : null) ||
					languages.map(normalize).find((l) => supported.includes(l)) ||
					fallback;
				const target = `/${picked}/`;
				setTimeout(() => location.replace(target), 800);
			})();
		</script>
	</body>
</html>
