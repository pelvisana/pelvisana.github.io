<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="robots" content="noindex" />
		<title>Pelvisana</title>
	</head>
	<body>
			<script>
				// @ts-nocheck
					(() => {
						const supported = ['en', 'es', 'ca'];
						const fallback = 'en';
					const normalize = (l) => (l || '').toLowerCase().split(/[-_]/)[0];
						const mode = (() => {
							try {
								return localStorage.getItem('pelvisana_lang_mode');
							} catch {
							return null;
						}
					})();
					const stored = (() => {
						try {
							return localStorage.getItem('pelvisana_lang');
						} catch {
						return null;
					}
					})();
					const languages = [navigator.language].concat(navigator.languages || []).filter(Boolean);
					const picked =
						(mode === 'manual' && stored && supported.includes(stored) ? stored : null) ||
						languages.map(normalize).find((l) => supported.includes(l)) ||
						fallback;
					const target = `/${picked}/` + location.search + location.hash;
					location.replace(target.replaceAll(/\/+/g, '/'));
				})();
		</script>
		<noscript>
			<meta http-equiv="refresh" content="0; url=/en/" />
			<a href="/en/">Continue</a>
		</noscript>
	</body>
</html>
