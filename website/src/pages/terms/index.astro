// Legacy URL: redirect to browser language.
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="robots" content="noindex" />
		<title>Pelvisana â€” Terms</title>
	</head>
	<body>
		<script>
			(() => {
				const supported = ['en', 'es', 'ca'];
				const fallback = 'en';
				const normalize = (l: string) => (l || '').toLowerCase().split('-')[0];
				const languages = (navigator.languages || []).concat([navigator.language]).filter(Boolean);
				const picked = languages.map(normalize).find((l) => supported.includes(l)) || fallback;
				const target = `/${picked}/terms/` + location.search + location.hash;
				location.replace(target.replaceAll(/\/+/g, '/'));
			})();
		</script>
		<noscript>
			<meta http-equiv="refresh" content="0; url=/en/terms/" />
			<a href="/en/terms/">Continue</a>
		</noscript>
	</body>
</html>
