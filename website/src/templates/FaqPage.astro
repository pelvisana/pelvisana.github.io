---
import BaseLayout from '../layouts/BaseLayout.astro';
import { STRINGS } from '../i18n/strings';
import type { Lang } from '../i18n/config';

type Props = { lang: Lang };
const { lang } = Astro.props;
const s = STRINGS[lang];
const pathname = `/${lang}/faq/`;

---

<BaseLayout lang={lang} pathname={pathname} title={`${s.faq.title} â€” ${s.siteName}`} description={s.faq.description}>
	<script
		type="application/ld+json"
		is:inline
		set:html={JSON.stringify({
			'@context': 'https://schema.org',
			'@type': 'FAQPage',
			mainEntity: s.faq.items.map((item) => ({
				'@type': 'Question',
				name: item.q,
				acceptedAnswer: { '@type': 'Answer', text: item.a },
			})),
		})}
	/>

	<header class="space-y-3">
		<h1 class="text-4xl font-semibold tracking-tight text-slate-950 dark:text-white">{s.faq.title}</h1>
		<p class="max-w-3xl text-pretty text-lg text-slate-700 dark:text-slate-300">{s.faq.description}</p>
	</header>

	<section class="mt-8 space-y-3">
		{s.faq.items.map((item) => (
			<details class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm dark:border-slate-800 dark:bg-slate-900/40">
				<summary class="cursor-pointer text-sm font-semibold text-slate-950 dark:text-white">{item.q}</summary>
				<p class="mt-3 text-sm leading-relaxed text-slate-700 dark:text-slate-300">{item.a}</p>
			</details>
		))}
	</section>
</BaseLayout>
