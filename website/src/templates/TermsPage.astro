---
import BaseLayout from '../layouts/BaseLayout.astro';
import { STRINGS } from '../i18n/strings';
import type { Lang } from '../i18n/config';

import TermsEn from '../content/legal/terms.en.mdx';
import TermsEs from '../content/legal/terms.es.mdx';
import TermsCa from '../content/legal/terms.ca.mdx';

type Props = { lang: Lang };
const { lang } = Astro.props;
const s = STRINGS[lang];
const pathname = `/${lang}/terms/`;

const ContentByLang = { en: TermsEn, es: TermsEs, ca: TermsCa } satisfies Record<Lang, unknown>;
const Content = ContentByLang[lang] as any;
---

<BaseLayout lang={lang} pathname={pathname} title={`${s.legal.terms.title} â€” ${s.siteName}`} description={s.footer.medicalDisclaimer}>
	<header class="space-y-3">
		<h1 class="text-4xl font-semibold tracking-tight text-slate-950 dark:text-white">{s.legal.terms.title}</h1>
	</header>
	<section class="prose prose-slate mt-8 max-w-none prose-a:text-ink-700 prose-a:no-underline hover:prose-a:underline prose-strong:text-slate-950 dark:prose-invert dark:prose-a:text-ink-200">
		<Content />
	</section>
</BaseLayout>
